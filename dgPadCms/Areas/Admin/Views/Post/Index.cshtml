@model IEnumerable<dgPadCms.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                PostTitle
            </th>
            <th>
                PostCreatoinDate
            </th>
            <th>
                PostType
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.PostTitle
            </td>
            <td>
                @item.PostCreatoinDate
            </td>
            <td>
                @item.PostType.PostTypeTitle

            </td>
            <td>
                <a asp-action="Edit" asp-route-PostId="@item.PostId">Edit</a> |
                <a asp-action="Delete" asp-route-PostId="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
